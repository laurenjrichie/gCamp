<%= form_for([@project, @task], html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
      <%= f.label :description, class: "col-sm-1 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :description, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :due_date, class: "col-sm-1 control-label" %>
      <div class="col-sm-2">
        <%= f.date_field :due_date, class: "form-control" %>
      </div>
  </div>
  <% if @task.persisted? %>
    <div class="form-group">
      <div class="checkbox col-sm-1 col-sm-offset-1">
        <label>
          <%= f.check_box :completed %>Complete
        </label>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-md-10 col-md-offset-1">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'cancel', project_tasks_path(@project), class: "btn btn-default" %>
    </div>
  </div>
<% end %>

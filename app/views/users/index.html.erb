<div class="page-header">
  <div class="pull-right">
    <%= link_to 'New User', new_user_path, class: "btn btn-info" %>
  </div>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-sm-2">Name</th>
      <th class="col-sm-2">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |doctor| %>
    <tr>
      <td class="col-sm-2">
        <%= doctor.first_name %><%= doctor.last_name %>
      </td>
      <td class="col-sm-10"> <!--formatting of lines off here -->
        <%= doctor.email %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
